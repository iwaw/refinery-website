<ul>
  <% if ::Refinery::AboutItems::Admin::AboutItemsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.about_items_admin_about_items_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_about_items_admin_about_item_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::AboutItems::Admin::AboutItemsController.sortable? && ::Refinery::AboutItems::AboutItem.many? %>
  <li>
    <%= link_to t('.reorder', :what => "About Items"),
                 refinery.about_items_admin_about_items_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "About Items"),
                 refinery.about_items_admin_about_items_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
