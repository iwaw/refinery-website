<%= form_for [refinery, :workshops_admin, @workshop] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @workshop,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :start_date -%>
    <%= f.datetime_select :start_date -%>
  </div>

  <div class='field'>
    <%= f.label :end_date -%>
    <%= f.datetime_select :end_date -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:info],
                :object => "workshops/workshop" -%>
  </div>

  <div class='field'>
    <%= f.label :photo1 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo1_id,
               :image => @workshop.photo1,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :photo2 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo2_id,
               :image => @workshop.photo2,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :photo3 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo3_id,
               :image => @workshop.photo3,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :photo4 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo4_id,
               :image => @workshop.photo4,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.workshops.admin.workshops.workshop'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @workshop.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
