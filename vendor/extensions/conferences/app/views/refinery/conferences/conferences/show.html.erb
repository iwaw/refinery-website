<% content_for :body_content_title do %>
  <%= @conference.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @conference.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @conference.date %>
    </p>
  </section>
  <section>
    <h1>Info</h1>
    <p>
      <%=raw @conference.info %>
    </p>
  </section>
  <section>
    <h1>Photo1</h1>
    <p>
      <%= image_fu @conference.photo1, nil %>
    </p>
  </section>
  <section>
    <h1>Photo2</h1>
    <p>
      <%= image_fu @conference.photo2, nil %>
    </p>
  </section>
  <section>
    <h1>Photo3</h1>
    <p>
      <%= image_fu @conference.photo3, nil %>
    </p>
  </section>
  <section>
    <h1>Photo4</h1>
    <p>
      <%= image_fu @conference.photo4, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="conferences">
      <% @conferences.each do |conference| %>
        <li>
          <%= link_to conference.title, refinery.conferences_conference_path(conference) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
